@{
    ViewData["Title"] = "Registration";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Registration - WoC</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link rel="stylesheet" href="~/css/index.css">

</head>
<body>
    <div id="scrollbar" class="cover">
        <img src="~/images/businesswomen.jpg">
        <h1><span class="center">WoC Community</span></h1>
        <h2><span class="center">Here in this community, everyone shares a common passion - Keep it together.</span></h2>
        <button id="reglink" class="button button-block center">Get Started Now</button>
    </div>


    <div class="form animated" id="reg">

        <ul class="tab-group">
            <li class="tab active"><a href="#signup">Sign Up</a></li>
            <li class="tab"><a href="#login">Log In</a></li>
        </ul>

        <div class="tab-content">
            <div id="signup">
                <h1>Let's get connected.</h1>
                <h2>By a simple upload of your resume, we can analyze your background and specialties, and help you connect with others just like you.</h2>
                <form method="post" enctype="multipart/form-data" action="/Registration/UploadResume">
                    <input type="file" name="files" />
                    <button type="submit" value="Upload" class="button button-block">Upload</button>
                </form>
            </div>

            <div id="login">
                <h1>Welcome Back!</h1>

                <form action="/" method="post">

                    <div class="field-wrap">
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        <input type="email" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        <input type="password" required autocomplete="off" />
                    </div>

                    <p class="forgot"><a href="#">Forgot Password?</a></p>

                    <button class="button button-block">Log In</button>

                </form>
            </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/js/site.js"></script>
    <script>
        $("#scrollbar > button").click(function (e) {
            // Prevent a page reload when a link is pressed
            e.preventDefault();
            // Call the scroll function
            goToByScroll($(this).attr("id"));
        });
    </script>

    <footer>
        <p align="center">&copy; 2017 - WoCCommunity</p>
    </footer>
</body>

</html>